

@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()

    <div style="text-align:left;" class="form-horizontal">
        <h4 style="margin-left:35%;" id="title"></h4>
        <div style="text-align:center;" class="form-group">
            <div style="height:30%;width:30%;"> <label class="control-label col-md-2">Imagem</label></div>

            <div class="col-md-10" style="margin-bottom:10%;margin-top:10%;">  <img id="img2" style="margin-bottom:10px;box-shadow:black 2px 2px 20px 2px;border:solid 1px black;" />  <br /></div>
            <div class="col-md-10">
                <input style="margin-left:10%;width:100%;height:2%;" class="form-control" type=file name="arquivo" id="id_foto">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nome</label>
            <div class="col-md-10">
                <input class="form-control" type="text" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input class="form-control" type="email" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Senha</label>
            <div class="col-md-10">
                <input class="form-control" type="text" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Celular</label>
            <div class="col-md-10">
                <input class="form-control" type="tel" max="9" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">CPF</label>
            <div class="col-md-10">
                <input class="form-control" type="text" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">RG</label>
            <div class="col-md-10">
                <input class="form-control" type="text" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nascimento</label>
            <div class="col-md-10">
                <input class="form-control" type="date" />
            </div>
        </div>

        <div id="adm" class="form-inline">
            <label class="control-label col-md-2">Ativar?</label>
            <input style="margin-left:25%;" type="radio" class="form-control" name="ativo" value="true">Sim
            <input style="margin-left:10%;" type="radio" class="form-control" name="ativo" value="false">Não
        </div><br />
            <br />  <div id="adm" class="form-inline">
                        <label class="control-label col-md-2">Tornar Administrador?</label>
                <input style="margin-left:25%;" type="radio" class="form-control" name="option" value="true">Sim
                <input style="margin-left:10%;" type="radio" class="form-control" name="option" value="false">Não
            </div>

            <br />
            <br />
            <label class="control-label col-md-2">Gênero</label>
            <select class="form-control">
                <option>Masculino</option>
                <option>Feminino</option>
            </select>
            <br />
        </div>

    <div class="form-group">
        <label class="control-label col-md-2">Descrição</label>
        <div class="col-md-10">
            <textarea class="form-control" style="hyphens:manual;resize:none;width:70%;height:100%;"></textarea>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
        </div>
        @ViewBag.cds
    </div>

}

