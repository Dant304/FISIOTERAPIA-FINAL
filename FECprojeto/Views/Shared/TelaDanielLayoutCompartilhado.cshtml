<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery", "~/JS/TelaDanielFisioterapeuta", "~/JS/Inicio")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Styles.Render( "~/CSS/TelaDanielFisioterapeuta", "~/CSS/TelaProfissional", "~/CSS/Inicio")
    <title>Fisioterapia em casa</title>
    <meta http-equiv="X-UA-Compatible" content="IE-edge" charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .modal-body .form-horizontal .col-sm-2,
        .modal-body .form-horizontal .col-sm-10 {
            width: 100%
        }

        .modal-body .form-horizontal .control-label {
            text-align: left;
        }

        .modal-body .form-horizontal .col-sm-offset-2 {
            margin-left: 15px;
        }
    </style>
    <script>
        var nome = '@FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.nome';
    </script>
    <!-- Estava pondo um relógio que mostrasse o tempo da sessão do usuário-->
</head>

<body>
    <nav id="btns">
        <div class="grid">
            <div id="perfil" onclick="Inicio();">
                @if (FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.imagemUsuario == null)
                {
                    <img src="@FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.imagemNull" alt="perfil" />
                }
                else
                {
                    <img src="@FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.imagemUsuario" alt="perfil" />
                }

            </div>
            <div id="videosBtn" onCLick="videoSourcePage()" title="Ir a lista de videos">Videos</div>
            <div id="artigosBtn" onClick="artigosSource()" title="Ir a lista de artigos">Artigos</div>
            @if (FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.tipoUsuario == "fis")
            {

                if (FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.Adm == true)
                {
                    <div id="profissionaisBtn">
                        Buscar
                        <ul id="submenu">
                            <li onClick="profissionalSource();" title="Ir a lista de fisioterapeutas">Fisioterapeutas</li>
                            <li title="Ir a lista de pacientes">Pacientes</li>
                        </ul>
                    </div>
                }
                else
                {
                    <div id="profissionaisBtn">
                        Buscar
                        <ul id="submenu">
                            <li title="Ir a lista de pacientes">Pacientes</li>
                        </ul>
                    </div>
                }
            }




            @if (FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.Adm == true)
            {
                <div id="admBtn">
                    Cadastrar  <ul id="submenu2">
                        <li id="fis" onclick="changeTitle(1);" data-target="#myModal" data-toggle="modal" title="Cadastrar um fisioterapeuta">Fisioterapeutas</li>

                        <li id="pac" onclick="changeTitle(2);" data-target="#myModal" data-toggle="modal" title="Cadastrar um paciente">Pacientes</li>
                    </ul>
                </div>
            }
            <div id="configBtn" onClick="config()" title="Ir ás configurações">Configurações</div>
            <div style="background-color:red;width:110px;" id="sairBtn" onClick="sair()">Sair</div>
        </div>

    </nav>
    <label id="Session"></label>
    <!-- Conteudo -->
    @RenderBody()
    <div id="partial">
    </div>
    <!---->

    <!---->
    @if (FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.tipoUsuario == "fis" && FECprojeto.Models.Classes.Auxiliares.Sessão.SessaoSistema.Adm == true)
    {
        <div id="modal"></div>
    }
    <!---->
   
    <!-- Modal mensageiro-->
    <!-- Modal -->
    <div style="height:50%" class="modal fade" id="myModalNorm" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header" style="background-color:dodgerblue;color:white">
                    <img style="float:left;box-shadow:0px 0px 10px 0px;border-radius:50%" src="~/imagens/logo.png" />
                    <h4 style="text-align:center" class="modal-title" id="myModalLabel">
                        Mensagem
                    </h4>
                </div>

                <!-- Modal Body -->
                <div id="conteudo" class="modal-body">
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

</body>
</html>

